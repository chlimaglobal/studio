
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSameCouple(userId) {
      let requester = get(/databases/$(database)/documents/users/$(request.auth.uid));
      let targetUser = get(/databases/$(database)/documents/users/$(userId));
      
      return request.auth != null &&
             requester.data.coupleId != null &&
             targetUser.data.coupleId != null &&
             requester.data.coupleId == targetUser.data.coupleId;
    }

    // USERS
    match /users/{userId} {
      // Allow read if the user is the owner OR if they belong to the same couple.
      allow read: if request.auth != null && (request.auth.uid == userId || isSameCouple(userId));
      
      // Allow create/update only if the user is the owner.
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // COUPLES
    match /couples/{coupleId} {
      allow read, delete: if request.auth != null && (
        resource.data.members != null &&
        resource.data.members.hasAny([request.auth.uid])
      );
      allow write: if request.auth != null;
    }

    // INVITES
    match /invites/{inviteId} {
      allow read, write: if request.auth != null && (
        resource.data.sentBy == request.auth.uid ||
        resource.data.sentTo == request.auth.uid
      );
    }
  }
}
