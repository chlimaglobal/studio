
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- USERS COLLECTION ---
    match /users/{userId} {
      
      // Usuário pode ler seu próprio documento OU o documento de seu parceiro se o coupleId for o mesmo.
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        (
          exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.coupleId != null &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.coupleId == resource.data.coupleId
        )
      );

      // Usuário só pode escrever em seu próprio documento.
      allow write: if request.auth != null && request.auth.uid == userId;

      // Subcoleções do usuário (transações, contas, etc.)
      match /{allChildren=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // --- COUPLE INVITES ---
    match /invites/{inviteId} {

      allow create: if request.auth != null;

      // Permitir leitura se:
      // 1. O usuário enviou (sentBy == auth.uid)
      // 2. O usuário recebeu (sentTo == auth.uid)
      allow read: if request.auth != null &&
        (resource.data.sentBy == request.auth.uid ||
         resource.data.sentTo == request.auth.uid);

      // Apenas o remetente pode cancelar/deletar
      allow delete: if request.auth != null &&
        resource.data.sentBy == request.auth.uid;
    }

    // --- COUPLE LINKS ---
    match /couples/{coupleId} {
      // Apenas membros do casal podem ler ou escrever no documento do casal
      allow read, write: if request.auth != null && request.auth.uid in resource.data.members;

      // Regra para a subcoleção de mensagens do casal
      match /messages/{messageId} {
        // Apenas membros do casal podem ler ou criar mensagens
        allow read, create: if request.auth != null && get(/databases/$(database)/documents/couples/$(coupleId)).data.members.hasAny([request.auth.uid]);
        // Ninguém pode atualizar ou deletar mensagens para garantir a integridade do histórico
        allow update, delete: if false;
      }
    }
  }
}
