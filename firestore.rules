rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSameCouple(userId) {
      let requester = get(/databases/$(database)/documents/users/$(request.auth.uid));
      let targetUser = get(/databases/$(database)/documents/users/$(userId));
      return requester.data.coupleId != null &&
             requester.data.coupleId == targetUser.data.coupleId;
    }

    // USERS
    match /users/{userId} {
      // Allow read/update on own document
      allow read, update: if request.auth != null && (
        request.auth.uid == userId ||
        isSameCouple(userId)
      );
      allow create: if request.auth != null;
    }

    // COUPLES
    match /couples/{coupleId} {
      allow read: if request.auth != null && (
        resource.data.members != null &&
        resource.data.members.hasAny([request.auth.uid])
      );
      allow write: if request.auth != null;
    }

    // INVITES
    match /invites/{inviteId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == resource.data.sentBy ||
        request.auth.uid == resource.data.sentTo
      );
    }
  }
}
