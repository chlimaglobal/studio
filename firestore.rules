rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSameCouple(userId) {
      let requester = get(/databases/$(database)/documents/users/$(request.auth.uid));
      // Esta regra permite que um usuário leia o documento de outro se:
      // 1. O solicitante estiver autenticado.
      // 2. O próprio documento do solicitante existir.
      // 3. O solicitante tiver um coupleId.
      // 4. O coupleId do solicitante for igual ao coupleId do documento que está sendo lido.
      return request.auth != null &&
             requester.exists &&
             requester.data.coupleId != null &&
             requester.data.coupleId == resource.data.coupleId;
    }

    // USERS
    match /users/{userId} {
      // Permite leitura se o usuário for o proprietário OU se pertencer ao mesmo casal.
      allow read: if request.auth != null && (request.auth.uid == userId || isSameCouple(userId));
      
      // Permite criar/atualizar apenas se o usuário for o proprietário.
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // COUPLES
    match /couples/{coupleId} {
      allow read: if request.auth != null && (
        resource.data.members != null &&
        resource.data.members.hasAny([request.auth.uid])
      );
      allow write: if request.auth != null;
    }

    // INVITES
    match /invites/{inviteId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == resource.data.sentBy ||
        request.auth.uid == resource.data.sentTo
      );
    }
  }
}
